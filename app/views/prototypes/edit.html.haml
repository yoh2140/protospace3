.container.proto-new
  = form_for(@prototype) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, class: "proto-new-title", placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :images, @prototype.images.main.first do |image|
              = image.file_field :content
              = image.hidden_field :status, value: :main
        .col-md-12
          - @prototype.images.sub.each_with_index do |image|
            %ul.proto-sub-list.list-group
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :images, image do |image_form|
                    = image_form.file_field :content
                    = image_form.hidden_field :status, value: :sub
      .row.proto-description
        .col-md-12
          = f.text_field :cach_copy, placeholder: "Cach Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        = button_tag "更新する", class: "btn btn-lg.btn-primary.btn-block", type: "submit"
