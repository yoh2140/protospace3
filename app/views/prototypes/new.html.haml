.container.proto-new
  = form_for(@prototype) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, class: "proto-new-title", placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload#js-main-image
            = f.fields_for :images do |image|
              %img.image-preview-prototype
                = image.file_field :content
                = image.hidden_field :status, value: "main"
        .col-md-12
          %ul.proto-sub-list.list-group
            - EasySettings.number.times do |i|
              %li.list-group-item.col-md-4
                .image-upload{ id: "js-sub-image-#{i+1}"}
                  = f.fields_for :images do |image|
                    %img.image-preview-prototype
                      = image.file_field :content
                      = image.hidden_field :status, value: "sub"

      = render "form", f: f

      .row.text-center.proto-btn
        = button_tag "作成", class: "btn btn-lg.btn-primary.btn-block", type: "submit"

