.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user) do
          = image_tag(@user.avatar, alt: "#{@user.avatar}", class: "media-object", width: "64px", height: "64px")
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @user.prototypes.length
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            = @user.profile
          .col-md-6
            %h4 Works
            = @user.works
.container.proto-list
  .row
    - @user.prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to prototype_path(prototype) do
            = image_tag("sample.png")
            .caption
              %h3
                = prototype.title
                .proto-meta
                  .proto-user
                    = link_to "by #{prototype.user.username}", user_path(prototype.user)
                  .proto-posted
                    = prototype.created_at
                %ul.proto-tag-list.list-inline
                  %li
                    %a{href: "#", class: "btn btn-default"} iPad
                  %li
                    %a{href: "#", class: "btn btn-default"} wireframe
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
