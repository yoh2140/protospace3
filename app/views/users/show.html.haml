.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user) do
          = image_tag(@user.avatar, alt: "#{@user.avatar}", class: "media-object", width: "64px", height: "64px")
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @user.prototypes.length
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            = @user.profile
          .col-md-6
            %h4 Works
            = @user.works
.container.proto-list
  .row
    = render @prototypes

.text-center
  = paginate @prototypes
